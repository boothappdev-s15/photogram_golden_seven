<h1>Edit Photo</h1>

<form action="http://localhost:3000/update_photo/<%= @photo_id %>">
  <div>
    <label for="photo_caption">Edit Caption:</label>
    <input type="text" name="the_caption" value="<%= @caption %>">
  </div>
  <div>
    <label for="photo_image_url">Edit Image URL:</label>
    <input type="text" name="the_source" value="<%= @source %>">
  </div>
  <div>
    <button>Edit Photo</button>
  </div>
</form>
